<%- include('./includes/head')%>
<%- include('./includes/nav')%>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou Entrar</h1>
            <p class="text-center lead">Registre-se ou entre com a sua conta</p>

            <%- include('includes/messages');%>

            <div class="row">
                <div class="col-lg my-5">
                    <h4>Faça seu cadastro</h4>
                    <p>Se você ainda não possui conta, preencha o formulário abaixo:</p>
                    <form class="form-cadastro" action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="mb-3">
                          <label class="form-label">Seu email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                          <label class="form-label">Sua senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar conta</button>
                    </form>
                </div>

                <div class="col-lg my-5">
                    <h4>Faça seu login</h4>
                    <p>Sejá tem uma conta, faça login abaixo:</p>
                    <form class="form-login" action="/login/enter" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="mb-3">
                          <label class="form-label">Seu email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                          <label class="form-label">Sua senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>
            </div>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>
        
<%- include('./includes/footer')%>
